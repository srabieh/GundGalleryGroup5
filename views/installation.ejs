<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- add bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="/public/css/installations.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.4.0/p5.js"></script>
  <script src="/public/js/wordCloud.js"></script>
  <title>Welcome to Gund Gallery!</title>
</head>

<body>
  <!-- Container Number One -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 mt-2">
        <img src="/public/images/installation-<%= installation.id %>.png" class="img-fluid" alt="Column 1" style="display: block; margin: 0 auto;">
        <p class="text-center"> <b> <%= installation.work_name %> </b> </p>
      </div>
      <div class="col-md-4 mt-4">
        <p class="text-left"> <b> Artist: </b> <%= installation.artist %></p>
        <p class="text-left"> <b> Material: </b> <%= installation.material_medium %></p>
        <p class="text-left"> <b> Info: </b> <%= installation.info_short_desc %></p>
      </div>
      <div class="col-md mt-4">
        <div id="wordcloud-sketch">
        </div>
      </div>
    </div>
  </div>

  <!-- Container Number Two -->
  <div class="container-fluid">
  </div>

  <!-- Comment Section -->
  <div class="container mt-5 mb-5">
    <div class="row height d-flex justify-content-center align-items-center">
      <div class="col-md-7">
        <div class="card">
          <div class="p-3">
            <h6>Comments</h6>
          </div>
          <form method="POST" action='/comment/create/<%= installation.id %>' class="mt-3 d-flex flex-row align-items-center p-3 form-color">
            <p class="m-2"><%= client.name %></p>
            <input name="response_text" type="text" class="form-control" placeholder="Enter your comment...">
            <input type="submit"></input>
          </form>
          <div class="mt-2">
            <% comments.forEach((comment) => { %>
              <div class="d-flex flex-row p-3">
                    <div class="w-100">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center">
                                <span class="mr-2"><%= comment.client_name %></span>
                            </div>
                        </div>
                        <p class="text-justify comment-text mb-0"><%= comment.response_text %></p>
                    </div>
                </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.16/dist/sweetalert2.all.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>

</html>